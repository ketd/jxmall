<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ketd.ware.mapper.WareOrderTaskMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ketd.ware.domain.WareOrderTask" id="BaseResultMap">
            <result property="id"    column="id"    />
            <result property="orderId"    column="order_id"    />
            <result property="orderSn"    column="order_sn"    />
            <result property="consignee"    column="consignee"    />
            <result property="consigneeTel"    column="consignee_tel"    />
            <result property="deliveryAddress"    column="delivery_address"    />
            <result property="orderComment"    column="order_comment"    />
            <result property="paymentWay"    column="payment_way"    />
            <result property="taskStatus"    column="task_status"    />
            <result property="orderBody"    column="order_body"    />
            <result property="trackingNo"    column="tracking_no"    />
            <result property="createTime"    column="create_time"    />
            <result property="wareId"    column="ware_id"    />
            <result property="taskComment"    column="task_comment"    />
    </resultMap>

    <sql id="Base_Column_List">
id,order_id,order_sn,consignee,consignee_tel,delivery_address,order_comment,payment_way,task_status,order_body,tracking_no,create_time,ware_id,task_comment
    </sql>
    <select id="selectOneByOrderSn" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from wms_ware_order_task
        where
        order_sn = #{orderSn,jdbcType=VARCHAR}
    </select>

</mapper>

